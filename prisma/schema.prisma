generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id           Int      @id @default(autoincrement())
  email        String   @unique
  passwordHash String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model TopicCategory {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  sortOrder Int     @default(0)
  topics    Topic[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TopicTag {
  id        Int     @id @default(autoincrement())
  name      String  @unique
  sortOrder Int     @default(0)
  topics    Topic[] @relation("TopicTags")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Topic {
  id          Int           @id @default(autoincrement())
  title       String
  excerpt     String?
  body        String
  imageUrl    String?
  link1Title  String?
  link1Url    String?
  link2Title  String?
  link2Url    String?
  isPublished Boolean       @default(true)
  sortOrder   Int           @default(0)
  categoryId  Int?
  category    TopicCategory? @relation(fields: [categoryId], references: [id])
  tags        TopicTag[]    @relation("TopicTags")
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model HeroImage {
  id          Int      @id @default(autoincrement())
  imageUrl    String
  altText     String?
  sortOrder   Int      @default(0)
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HeroPhrase {
  id          Int      @id @default(autoincrement())
  text        String
  sortOrder   Int      @default(0)
  isPublished Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Contact {
  id          Int      @id @default(autoincrement())
  name        String
  email       String
  phoneNumber String?
  message     String
  createdAt   DateTime @default(now())
}

model News {
  id            Int      @id @default(autoincrement())
  title         String
  subtitle      String?
  url           String
  interviewDate DateTime
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model NewsConfig {
  id        Int      @id @default(autoincrement())
  subtitle  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ProjectMediaType {
  IMAGE
  VIDEO
}

model Project {
  id           Int               @id @default(autoincrement())
  title        String
  slug         String            @unique
  summary      String?
  bodyMarkdown String
  coverImage   String?
  publishedAt  DateTime?
  isFeatured   Boolean           @default(false)
  order        Int               @default(0)
  role         String?
  tags         ProjectTag[]      @relation("ProjectTags")
  techStacks   ProjectTechStack[] @relation("ProjectTechStacks")
  media        ProjectMedia[]
  links        ProjectLink[]
  createdAt    DateTime          @default(now())
  updatedAt    DateTime          @updatedAt
}

model ProjectTag {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  slug      String    @unique
  projects  Project[] @relation("ProjectTags")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model ProjectTechStack {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  slug      String    @unique
  projects  Project[] @relation("ProjectTechStacks")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model ProjectMedia {
  id        Int             @id @default(autoincrement())
  project   Project         @relation(fields: [projectId], references: [id])
  projectId Int
  type      ProjectMediaType
  url       String
  alt       String?
  width     Int?
  height    Int?
  order     Int             @default(0)
  poster    String?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  @@index([projectId])
}

model ProjectLink {
  id        Int      @id @default(autoincrement())
  project   Project  @relation(fields: [projectId], references: [id])
  projectId Int
  label     String
  url       String
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([projectId])
}
