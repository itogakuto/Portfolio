<!DOCTYPE html>
<html>
  <%- include('partials/head', { title: topic.title }) %>
  <body data-page="topic">
    <%- include('partials/site-header', { brandSubtitle: 'PORTFOLIO' }) %>

    <main id="swup" class="swup-transition topic-detail" data-swup>
      <div class="topic-hero">
        <% if (topic.imageUrl) { %>
          <img src="<%= topic.imageUrl %>" alt="<%= topic.title %>" />
        <% } %>
      </div>
      <div class="topic-content">
        <div class="topic-meta">
          <% if (topic.category) { %>
            <span class="topic-category"><%= topic.category.name %></span>
          <% } %>
          <div class="topic-tags">
            <% topic.tags.forEach(function(tag) { %>
              <span>#<%= tag.name %></span>
            <% }) %>
          </div>
        </div>
        <h1><%= topic.title %></h1>
        <p class="topic-body"><%= topic.body %></p>
        <p>関連リンクは下記ボタンをクリック</p>
        <% if (topic.link1Url || topic.link2Url) { %>
          <div class="topic-links">
            <% if (topic.link1Url) { %>
              <a href="<%= topic.link1Url %>" target="_blank" rel="noopener">
                <%= topic.link1Title || topic.link1Url %>
              </a>
            <% } %>
            <% if (topic.link2Url) { %>
              <a href="<%= topic.link2Url %>" target="_blank" rel="noopener">
                <%= topic.link2Title || topic.link2Url %>
              </a>
            <% } %>
          </div>
        <% } %>

        <p class="topic-updated-at">
          最終更新日: <%= topic.updatedAt.toISOString().slice(0, 10) %>
        </p>
      </div>
    </main>
    <%- include('partials/site-footer') %>
    <%- include('partials/scripts') %>
  </body>
</html>
